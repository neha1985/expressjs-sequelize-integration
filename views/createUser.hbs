<style>
    .error{
        color:red;
    }
    </style>
<script>
    $(document).ready(function () {
        $("#btnSave").click(function () {            
            if ($("form").validate()) {
                $("form").submit();
            }
        });
    });
</script>
<h2>{{Title}}</h2>
<p class="error"> {{Error}}</p>
<form action="/users/create" method="POST" class="form-horizontal" role="form" novalidate>
    <div class="form-group">
        <label class="col-md-2">Name</label>
        <div class="col-md-10">
            <input type="text" class="form-control" name="name" data-rule-required="true" data-msg-required="Please Enter Name" />
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2">Email</label>
        <div class="col-md-10">
            <input type="email" class="form-control" name="email" data-rule-required="true" data-msg-required="Please Enter Email"
            />
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2">Address</label>
        <div class="col-md-10">
            <textarea class="form-control" name="address" data-rule-required="true" data-msg-required="Please Enter Address"></textarea>
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2">Phone/Mobile</label>
        <div class="col-md-10">
            <input type="text" class="form-control" name="phone" data-rule-required="true" data-msg-required="Please Enter Phone No."></textarea>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10 col-md-offset-2">
            <button type="button" id="btnSave" class="btn btn-primary">Save</button>
        </div>
    </div>
</form>